---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="h-full bg-gray-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Mini-CRM para GestiÃ³n de Clientes y Licencias" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Shaluqa CRM</title>
  </head>
  <body class="h-full font-sans antialiased text-gray-900 bg-gray-50 selection:bg-blue-900 selection:text-white">
    <div class="fixed inset-0 -z-10 h-full w-full bg-white [background:radial-gradient(125%_125%_at_50%_10%,#fff_40%,#1e3a8a_100%)] opacity-20"></div>
    <slot />
    <style is:global>
      @keyframes slideUpBar {
        from {
          opacity: 0;
          transform: translateY(20px) scaleY(0);
        }
        to {
          opacity: 1;
          transform: translateY(0) scaleY(1);
        }
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: scale(0);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }
      @keyframes drawLine {
        from {
          stroke-dasharray: 1000;
          stroke-dashoffset: 1000;
        }
        to {
          stroke-dasharray: 1000;
          stroke-dashoffset: 0;
        }
      }
    </style>
  </body>
</html>
