---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import { supabase } from "../../lib/supabase";
import type { EstablecimientoWithDetails } from "../../types/database.types";

let actionError = "";

// Get search filter from URL
const url = new URL(Astro.request.url);
const searchName = url.searchParams.get("nombre") || "";

// Handle delete action
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const action = formData.get("action");
    const establecimientoId = formData.get("establecimientoId");

    if (action === "delete" && establecimientoId) {
        const { error: deleteError } = await supabase
            .from("establecimientos")
            .delete()
            .eq("id", establecimientoId);

        if (deleteError) {
            console.error("Error deleting establecimiento:", deleteError);
            actionError = `Error al eliminar el establecimiento: ${deleteError.message}`;
        } else {
            return Astro.redirect("/establecimientos");
        }
    }
}

// Fetch all establecimientos with category and client details
let query = supabase
    .from("establecimientos")
    .select(
        `
    *,
    categorias (nombre),
    clients (name, email, company)
  `,
    )
    .order("created", { ascending: false });

if (searchName) {
    query = query.ilike("nombre", `%${searchName}%`);
}

let { data: establecimientos, error } = await query;

// Category colors
const categoryColors: Record<string, string> = {
    restaurante: "bg-orange-100 text-orange-800",
    alojamiento: "bg-blue-100 text-blue-800",
    servicio: "bg-purple-100 text-purple-800",
};
---

<Layout title="Establecimientos">
    <Navbar />

    <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="animate-fade-in">
            <!-- Header -->
            <div class="sm:flex sm:items-center sm:justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 tracking-tight">
                        Establecimientos
                    </h1>
                    <p class="mt-2 text-lg text-gray-600">
                        Gestiona los establecimientos de tus clientes.
                    </p>
                </div>
                <div class="mt-4 sm:mt-0">
                    <a
                        href="/establecimientos/new"
                        class="inline-flex items-center px-5 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all hover:-translate-y-0.5"
                    >
                        <span class="mr-2 text-lg">➕</span>
                        Nuevo Establecimiento
                    </a>
                </div>
            </div>

            <!-- Search Filter -->
            <div class="mb-6">
                <form method="GET" class="max-w-xl">
                    <div class="flex gap-2">
                        <div class="flex-1">
                            <label
                                for="nombre"
                                class="block text-sm font-medium text-gray-700 mb-1"
                            >
                                Buscar por nombre
                            </label>
                            <input
                                type="text"
                                name="nombre"
                                id="nombre"
                                value={searchName}
                                placeholder="Nombre del establecimiento"
                                class="block w-full rounded-lg border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                            />
                        </div>
                        <div class="flex items-end gap-2">
                            <button
                                type="submit"
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
                            >
                                Buscar
                            </button>
                            {
                                searchName && (
                                    <a
                                        href="/establecimientos"
                                        class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
                                    >
                                        Limpiar
                                    </a>
                                )
                            }
                        </div>
                    </div>
                </form>
            </div>

            <!-- Establecimientos Grid -->
            <div class="mt-8">
                {
                    actionError && (
                        <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded-md animate-fade-in">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg
                                        class="h-5 w-5 text-red-400"
                                        xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-red-700 font-medium">
                                        {actionError}
                                    </p>
                                </div>
                            </div>
                        </div>
                    )
                }

                {
                    error ? (
                        <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg
                                        class="h-5 w-5 text-red-400"
                                        xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-red-700">
                                        Error al cargar establecimientos:{" "}
                                        {error.message}
                                    </p>
                                </div>
                            </div>
                        </div>
                    ) : establecimientos && establecimientos.length > 0 ? (
                        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                            {(
                                establecimientos as EstablecimientoWithDetails[]
                            ).map((est, index) => (
                                <div
                                    class="bg-white rounded-xl shadow-sm ring-1 ring-gray-900/5 hover:shadow-md hover:ring-primary-500/30 transition-all duration-300 group animate-slide-up overflow-hidden"
                                    style={`animation-delay: ${index * 50}ms;`}
                                >
                                    {/* Image */}
                                    {est.imagen_url && (
                                        <div class="h-40 overflow-hidden">
                                            <img
                                                src={est.imagen_url}
                                                alt={est.nombre}
                                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                            />
                                        </div>
                                    )}

                                    <div class="p-6">
                                        <div class="flex items-start justify-between">
                                            <div class="flex-1">
                                                <div class="flex items-center gap-2 mb-2">
                                                    <span
                                                        class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${categoryColors[est.categorias?.nombre?.toLowerCase()] || "bg-gray-100 text-gray-800"}`}
                                                    >
                                                        {est.categorias
                                                            ?.nombre ||
                                                            "Sin categoría"}
                                                    </span>
                                                    {est.recomendado === 1 && (
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                            ⭐ Recomendado
                                                        </span>
                                                    )}
                                                </div>
                                                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">
                                                    {est.nombre}
                                                </h3>
                                                {est.descripcion && (
                                                    <p class="text-sm text-gray-500 mt-1 line-clamp-2">
                                                        {est.descripcion}
                                                    </p>
                                                )}
                                            </div>
                                            <a
                                                href={`/establecimientos/${est.id}`}
                                                class="text-gray-400 hover:text-primary-600 transition-colors p-2 rounded-full hover:bg-primary-50 block"
                                                title="Ver detalles"
                                            >
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke-width="1.5"
                                                    stroke="currentColor"
                                                    class="w-5 h-5"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        d="M8.25 4.5l7.5 7.5-7.5 7.5"
                                                    />
                                                </svg>
                                            </a>
                                        </div>

                                        <div class="mt-4 space-y-2">
                                            {/* Client */}
                                            {est.clients && (
                                                <div class="flex items-center text-sm text-gray-600">
                                                    <svg
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        fill="none"
                                                        viewBox="0 0 24 24"
                                                        stroke-width="1.5"
                                                        stroke="currentColor"
                                                        class="w-4 h-4 mr-2 text-gray-400"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
                                                        />
                                                    </svg>
                                                    <span class="truncate">
                                                        {est.clients.name}
                                                    </span>
                                                </div>
                                            )}

                                            {/* Location */}
                                            <div class="flex items-center text-sm text-gray-600">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke-width="1.5"
                                                    stroke="currentColor"
                                                    class="w-4 h-4 mr-2 text-gray-400"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
                                                    />
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                                                    />
                                                </svg>
                                                <span class="truncate">
                                                    {est.latitud.toFixed(6)},{" "}
                                                    {est.longitud.toFixed(6)}
                                                </span>
                                            </div>

                                            {/* Phone */}
                                            {est.telefono && (
                                                <div class="flex items-center text-sm text-gray-600">
                                                    <svg
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        fill="none"
                                                        viewBox="0 0 24 24"
                                                        stroke-width="1.5"
                                                        stroke="currentColor"
                                                        class="w-4 h-4 mr-2 text-gray-400"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                                                        />
                                                    </svg>
                                                    {est.telefono}
                                                </div>
                                            )}
                                        </div>

                                        <div class="mt-6 pt-4 border-t border-gray-100 flex items-center justify-between text-xs text-gray-500">
                                            <span>ID: {est.id}</span>

                                            <div class="flex space-x-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                                <a
                                                    href={`/establecimientos/edit/${est.id}`}
                                                    class="text-blue-600 hover:text-blue-800 font-medium"
                                                >
                                                    Editar
                                                </a>
                                                <span class="text-gray-300">
                                                    |
                                                </span>
                                                <form
                                                    method="POST"
                                                    class="inline"
                                                    onsubmit="return confirm('¿Estás seguro de que deseas eliminar este establecimiento?')"
                                                >
                                                    <input
                                                        type="hidden"
                                                        name="action"
                                                        value="delete"
                                                    />
                                                    <input
                                                        type="hidden"
                                                        name="establecimientoId"
                                                        value={est.id}
                                                    />
                                                    <button
                                                        type="submit"
                                                        class="text-red-600 hover:text-red-800 font-medium"
                                                    >
                                                        Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    ) : (
                        <div class="text-center py-20 bg-white rounded-2xl shadow-sm ring-1 ring-gray-900/5">
                            <div class="mx-auto h-24 w-24 text-gray-300">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1"
                                    stroke="currentColor"
                                    class="w-full h-full"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M13.5 21v-7.5a.75.75 0 01.75-.75h3a.75.75 0 01.75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349m-16.5 11.65V9.35m0 0a3.001 3.001 0 003.75-.615A2.993 2.993 0 009.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 002.25 1.016c.896 0 1.7-.393 2.25-1.016a3.001 3.001 0 003.75.614m-16.5 0a3.004 3.004 0 01-.621-4.72L4.318 3.44A1.5 1.5 0 015.378 3h13.243a1.5 1.5 0 011.06.44l1.19 1.189a3 3 0 01-.621 4.72m-13.5 8.65h3.75a.75.75 0 00.75-.75V13.5a.75.75 0 00-.75-.75H6.75a.75.75 0 00-.75.75v3.75c0 .415.336.75.75.75z"
                                    />
                                </svg>
                            </div>
                            <h3 class="mt-4 text-lg font-medium text-gray-900">
                                No hay establecimientos registrados
                            </h3>
                            <p class="mt-1 text-sm text-gray-500">
                                Comienza agregando tu primer establecimiento al
                                sistema.
                            </p>
                            <div class="mt-6">
                                <a
                                    href="/establecimientos/new"
                                    class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
                                >
                                    <span class="mr-2">➕</span>
                                    Nuevo Establecimiento
                                </a>
                            </div>
                        </div>
                    )
                }
            </div>
        </div>
    </main>
</Layout>
