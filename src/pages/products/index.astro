---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import { supabase } from '../../lib/supabase';
import type { Product } from '../../types/database.types';

const profile = Astro.locals.profile;
const isAdmin = profile.role === 'admin';
let actionError = '';

// Get search filter from URL
const url = new URL(Astro.request.url);
const searchId = url.searchParams.get('id') || '';

// Handle delete action
if (Astro.request.method === 'POST' && isAdmin) {
  const formData = await Astro.request.formData();
  const action = formData.get('action');
  const productId = formData.get('productId');

  if (action === 'delete' && productId) {
    const { error: deleteError } = await supabase.from('products').delete().eq('id', productId);
    
    if (deleteError) {
      console.error('Error deleting product:', deleteError);
      if (deleteError.code === '23503') {
        actionError = 'No se puede eliminar este producto porque tiene licencias o registros asociados.';
      } else {
        actionError = `Error al eliminar el producto: ${deleteError.message}`;
      }
    } else {
      return Astro.redirect('/products');
    }
  }
}

// Fetch all products with optional ID filter
let query = supabase
  .from('products')
  .select('*')
  .order('name');

let { data: products, error } = await query;

// Filter by ID in JavaScript (since Supabase doesn't support ILIKE on UUID)
if (searchId && products) {
  products = products.filter(product => 
    product.id.toLowerCase().startsWith(searchId.toLowerCase())
  );
}
---

