---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import { supabase } from "../../lib/supabase";

const profile = Astro.locals.profile;
const isAdmin = profile.role === "admin";

// Get client_id from URL if present (pre-selection)
const url = new URL(Astro.request.url);
const preSelectedClientId = url.searchParams.get("client");

let errorMessage = "";

// Fetch clients and products for dropdowns
const { data: clients } = await supabase
  .from("clients")
  .select("id, name, company")
  .order("name");

const { data: products } = await supabase
  .from("products")
  .select("id, name, price_one_payment, price_subscription")
  .order("name");

// Fetch all establishments for client filtering
const { data: establishments } = await supabase
  .from("establecimientos")
  .select("id, nombre, client_id")
  .order("nombre");

if (Astro.request.method === "POST") {
  if (!isAdmin) {
    return Astro.redirect("/licenses");
  }

  const formData = await Astro.request.formData();
  const clientId = formData.get("clientId")?.toString();
  const productId = formData.get("productId")?.toString();
  const establishmentId = formData.get("establishmentId")?.toString() || null;
  const type = formData.get("type")?.toString();
  const startDate = formData.get("startDate")?.toString();
  const endDate = formData.get("endDate")?.toString();
  const status = formData.get("status")?.toString();

  if (clientId && productId && type && startDate && status) {
    const isExpired = endDate && new Date(endDate) < new Date();
    const finalStatus = isExpired ? "inactiva" : status;

    const { error } = await supabase.from("licenses").insert([
      {
        client_id: clientId,
        product_id: productId,
        establishment_id: establishmentId ? parseInt(establishmentId) : null,
        type,
        start_date: startDate,
        end_date: endDate || null,
        status: finalStatus,
      },
    ]);

    if (error) {
      errorMessage = error.message;
    } else {
      return Astro.redirect("/licenses");
    }
  } else {
    errorMessage = "Por favor, completa todos los campos requeridos.";
  }
}

// Redirect if not admin
if (!isAdmin) {
  return Astro.redirect("/licenses");
}
---

<Layout title="Nueva Licencia">
  <Navbar />

  <main class="max-w-3xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="animate-fade-in">
      <!-- Breadcrumb -->
      <nav class="flex mb-8" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
          <li>
            <div>
              <a href="/licenses" class="text-gray-400 hover:text-gray-500">
                <svg
                  class="flex-shrink-0 h-5 w-5"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                  ></path>
                </svg>
                <span class="sr-only">Inicio</span>
              </a>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg
                class="flex-shrink-0 h-5 w-5 text-gray-300"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z"></path>
              </svg>
              <a
                href="/licenses"
                class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700"
                >Licencias</a
              >
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg
                class="flex-shrink-0 h-5 w-5 text-gray-300"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z"></path>
              </svg>
              <span
                class="ml-4 text-sm font-medium text-gray-500"
                aria-current="page">Nueva</span
              >
            </div>
          </li>
        </ol>
      </nav>

      <div
        class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden"
      >
        <div class="px-4 py-5 sm:px-6 bg-gray-50/50 border-b border-gray-100">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Asignar Nueva Licencia
          </h3>
          <p class="mt-1 text-sm text-gray-500">
            Crea una nueva licencia para un cliente.
          </p>
        </div>

        <form method="POST" class="p-6 space-y-6">
          {
            errorMessage && (
              <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg
                      class="h-5 w-5 text-red-400"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm text-red-700">{errorMessage}</p>
                  </div>
                </div>
              </div>
            )
          }

          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <!-- Client Selection -->
            <div class="sm:col-span-2">
              <label
                for="clientId"
                class="block text-sm font-medium text-gray-700"
              >
                Cliente <span class="text-red-500">*</span>
              </label>
              <select
                id="clientId"
                name="clientId"
                required
                class="mt-1 block w-full pl-3 pr-10 py-2.5 text-base border-gray-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-md border"
              >
                <option value="">Seleccionar cliente...</option>
                {
                  clients?.map((client) => (
                    <option
                      value={client.id}
                      selected={client.id === preSelectedClientId}
                    >
                      {client.name}{" "}
                      {client.company ? `(${client.company})` : ""}
                    </option>
                  ))
                }
              </select>
            </div>

            <!-- Establishment Selection -->
            <div class="sm:col-span-2">
              <label
                for="establishmentId"
                class="block text-sm font-medium text-gray-700"
              >
                Establecimiento
              </label>
              <select
                id="establishmentId"
                name="establishmentId"
                disabled
                class="mt-1 block w-full pl-3 pr-10 py-2.5 text-base border-gray-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-md border disabled:bg-gray-100 disabled:text-gray-400"
              >
                <option value="">Seleccionar establecimiento...</option>
              </select>
              <p class="mt-1 text-xs text-gray-500">
                Selecciona primero un cliente para ver sus establecimientos.
              </p>
            </div>

            <!-- Product Selection -->
            <div class="sm:col-span-2">
              <label
                for="productId"
                class="block text-sm font-medium text-gray-700"
              >
                Producto <span class="text-red-500">*</span>
              </label>
              <select
                id="productId"
                name="productId"
                required
                class="mt-1 block w-full pl-3 pr-10 py-2.5 text-base border-gray-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-md border"
              >
                <option value="">Seleccionar producto...</option>
                {
                  products?.map((product) => (
                    <option value={product.id}>{product.name}</option>
                  ))
                }
              </select>
            </div>

            <!-- License Type -->
            <div class="sm:col-span-2">
              <label for="type" class="block text-sm font-medium text-gray-700">
                Tipo de Licencia <span class="text-red-500">*</span>
              </label>
              <select
                id="type"
                name="type"
                required
                class="mt-1 block w-full pl-3 pr-10 py-2.5 text-base border-gray-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-md border"
              >
                <option value="licencia_unica"
                  >Licencia Única (Pago único)</option
                >
                <option value="suscripcion">Suscripción (Recurrente)</option>
              </select>
            </div>

            <!-- Start Date -->
            <div>
              <label
                for="startDate"
                class="block text-sm font-medium text-gray-700"
              >
                Fecha de Inicio <span class="text-red-500">*</span>
              </label>
              <input
                type="date"
                name="startDate"
                id="startDate"
                required
                value={new Date().toISOString().split("T")[0]}
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2.5 border"
              />
            </div>

            <!-- End Date -->
            <div>
              <label
                for="endDate"
                class="block text-sm font-medium text-gray-700"
              >
                Fecha de Fin
              </label>
              <input
                type="date"
                name="endDate"
                id="endDate"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2.5 border"
              />
              <p class="mt-1 text-xs text-gray-500">
                Dejar vacío para licencias perpetuas
              </p>
            </div>

            <!-- Status -->
            <div class="sm:col-span-2">
              <label
                for="status"
                class="block text-sm font-medium text-gray-700"
              >
                Estado <span class="text-red-500">*</span>
              </label>
              <select
                id="status"
                name="status"
                required
                class="mt-1 block w-full pl-3 pr-10 py-2.5 text-base border-gray-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-md border"
              >
                <option value="activa">Activa</option>
                <option value="inactiva">Inactiva</option>
                <option value="pendiente_pago">Pendiente de Pago</option>
              </select>
            </div>
          </div>

          <div class="pt-5 border-t border-gray-100 flex justify-end space-x-3">
            <a
              href="/licenses"
              class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
            >
              Cancelar
            </a>
            <button
              type="submit"
              class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all hover:-translate-y-0.5"
            >
              Crear Licencia
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>
</Layout>

<script define:vars={{ establishments }}>
  document.addEventListener("DOMContentLoaded", () => {
    const clientSelect = document.getElementById("clientId");
    const establishmentSelect = document.getElementById("establishmentId");

    // Store all establishments in memory
    const allEstablishments = establishments || [];

    function updateEstablishments() {
      const selectedClientId = clientSelect.value;

      // Clear current options except default
      establishmentSelect.innerHTML =
        '<option value="">Seleccionar establecimiento...</option>';

      if (!selectedClientId) {
        establishmentSelect.disabled = true;
        return;
      }

      // Filter establishments by client
      const clientEstablishments = allEstablishments.filter(
        (est) => est.client_id === selectedClientId,
      );

      if (clientEstablishments.length > 0) {
        establishmentSelect.disabled = false;
        clientEstablishments.forEach((est) => {
          const option = document.createElement("option");
          option.value = est.id;
          option.textContent = est.nombre;
          establishmentSelect.appendChild(option);
        });
      } else {
        establishmentSelect.disabled = true;
        const option = document.createElement("option");
        option.textContent = "No hay establecimientos para este cliente";
        establishmentSelect.appendChild(option);
      }
    }

    // Listen for changes
    clientSelect.addEventListener("change", updateEstablishments);

    // Initial check (if client is pre-selected)
    if (clientSelect.value) {
      updateEstablishments();
    }
  });
</script>
