---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import { supabase } from "../../lib/supabase";

const profile = Astro.locals.profile;
const isAdmin = profile.role === "admin";
let actionError = "";

// Get current filter from URL
const url = new URL(Astro.request.url);
const statusFilter = url.searchParams.get("status") || "all";
const searchId = url.searchParams.get("id") || "";

// Handle delete action
if (Astro.request.method === "POST" && isAdmin) {
  const formData = await Astro.request.formData();
  const action = formData.get("action");
  const licenseId = formData.get("licenseId");

  if (action === "delete" && licenseId) {
    const { error: deleteError } = await supabase
      .from("licenses")
      .delete()
      .eq("id", licenseId);

    if (deleteError) {
      console.error("Error deleting license:", deleteError);
      actionError = `Error al eliminar la licencia: ${deleteError.message}`;
    } else {
      return Astro.redirect(`/licenses?status=${statusFilter}`);
    }
  }
}

// Build query
let query = supabase
  .from("licenses")
  .select(
    `
    *,
    clients (name, company),
    products (name)
  `,
  )
  .order("created_at", { ascending: false });

if (statusFilter !== "all") {
  query = query.eq("status", statusFilter);
}

let { data: licenses, error } = await query;

// Filter by ID in JavaScript (since Supabase doesn't support ILIKE on UUID)
if (searchId && licenses) {
  licenses = licenses.filter(license => 
    license.id.toLowerCase().startsWith(searchId.toLowerCase())
  );
}

const tabs = [
  { id: "all", name: "Todas", count: null },
  { id: "activa", name: "Activas", count: null },
  { id: "inactiva", name: "Inactivas", count: null },
  { id: "pendiente_pago", name: "Pendientes de Pago", count: null },
];
---

<Layout title="Licencias">
  <Navbar />

  <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="animate-fade-in">
      <!-- Header -->
      <div class="sm:flex sm:items-center sm:justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 tracking-tight">
            Licencias
          </h1>
          <p class="mt-2 text-lg text-gray-600">
            Controla las suscripciones y licencias de tus clientes.
          </p>
        </div>
        {
          isAdmin && (
            <div class="mt-4 sm:mt-0">
              <a
                href="/licenses/new"
                class="inline-flex items-center px-5 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all hover:-translate-y-0.5"
              >
                <span class="mr-2 text-lg">➕</span>
                Nueva Licencia
              </a>
            </div>
          )
        }
      </div>

      <!-- Search Filter -->
      <div class="mb-6">
        <form method="GET" class="max-w-xl">
          <input type="hidden" name="status" value={statusFilter} />
          <div class="flex gap-2">
            <div class="flex-1">
              <label for="id" class="block text-sm font-medium text-gray-700 mb-1">
                Buscar por ID
              </label>
              <input
                type="text"
                name="id"
                id="id"
                value={searchId}
                placeholder="Ingrese el ID de la licencia"
                class="block w-full rounded-lg border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
              />
            </div>
            <div class="flex items-end gap-2">
              <button
                type="submit"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
              >
                Buscar
              </button>
              {searchId && (
                <a
                  href={`/licenses?status=${statusFilter}`}
                  class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
                >
                  Limpiar
                </a>
              )}
            </div>
          </div>
        </form>
      </div>

      <!-- Tabs -->
      <div class="border-b border-gray-200 mb-6">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
          {
            tabs.map((tab) => (
              <a
                href={`/licenses?status=${tab.id}${searchId ? `&id=${searchId}` : ''}`}
                class={`
                whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors
                ${
                  statusFilter === tab.id
                    ? "border-primary-500 text-primary-600"
                    : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                }
              `}
              >
                {tab.name}
              </a>
            ))
          }
        </nav>
      </div>

      <!-- Licenses Table -->
      <div
        class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden animate-slide-up"
      >
        {
          actionError && (
            <div class="p-6 pb-0">
              <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md animate-fade-in">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg
                      class="h-5 w-5 text-red-400"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm text-red-700 font-medium">
                      {actionError}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          )
        }

        {
          error ? (
            <div class="p-6">
              <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg
                      class="h-5 w-5 text-red-400"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm text-red-700">
                      Error al cargar licencias: {error.message}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          ) : licenses && licenses.length > 0 ? (
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      ID
                    </th>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      Cliente
                    </th>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      Producto
                    </th>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      Tipo
                    </th>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      Estado
                    </th>
                    <th
                      scope="col"
                      class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      Vigencia
                    </th>
                    {isAdmin && (
                      <th scope="col" class="relative px-6 py-3">
                        <span class="sr-only">Acciones</span>
                      </th>
                    )}
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  {licenses.map((license: any) => (
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-6 py-4 whitespace-nowrap text-xs text-gray-400 font-mono">
                        {license.id}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                          <div class="h-8 w-8 rounded-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center text-xs font-bold text-gray-600 mr-3">
                            {license.clients?.name.charAt(0)}
                          </div>
                          <div>
                            <div class="text-sm font-medium text-gray-900">
                              {license.clients?.name}
                            </div>
                            <div class="text-xs text-gray-500">
                              {license.clients?.company}
                            </div>
                          </div>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {license.products?.name}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {license.type === "licencia_unica"
                          ? "Pago Único"
                          : "Suscripción"}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span
                          class={`px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${
                            (license.end_date &&
                              new Date(license.end_date) < new Date()) ||
                            license.status === "inactiva"
                              ? "bg-gray-100 text-gray-800"
                              : license.status === "activa"
                                ? "bg-green-100 text-green-800"
                                : "bg-yellow-100 text-yellow-800"
                          }`}
                        >
                          {license.end_date &&
                          new Date(license.end_date) < new Date()
                            ? "Inactiva"
                            : license.status.charAt(0).toUpperCase() +
                              license.status.slice(1)}
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <div class="flex flex-col">
                          <span>
                            Inicio:{" "}
                            {new Date(license.start_date).toLocaleDateString(
                              "es-ES",
                            )}
                          </span>
                          {license.end_date && (
                            <span class="text-xs text-gray-400">
                              Fin:{" "}
                              {new Date(license.end_date).toLocaleDateString(
                                "es-ES",
                              )}
                            </span>
                          )}
                        </div>
                      </td>
                      {isAdmin && (
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                          <div class="flex justify-end space-x-3">
                            <a
                              href={`/licenses/edit/${license.id}`}
                              class="text-primary-600 hover:text-primary-900"
                            >
                              Editar
                            </a>
                            <form
                              method="POST"
                              class="inline"
                              onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta licencia?')"
                            >
                              <input
                                type="hidden"
                                name="action"
                                value="delete"
                              />
                              <input
                                type="hidden"
                                name="licenseId"
                                value={license.id}
                              />
                              <button
                                type="submit"
                                class="text-red-600 hover:text-red-900"
                              >
                                Eliminar
                              </button>
                            </form>
                          </div>
                        </td>
                      )}
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          ) : (
            <div class="text-center py-20">
              <div class="mx-auto h-12 w-12 text-gray-300">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-full h-full"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z"
                  />
                </svg>
              </div>
              <h3 class="mt-2 text-sm font-medium text-gray-900">
                No se encontraron licencias
              </h3>
              <p class="mt-1 text-sm text-gray-500">
                {statusFilter !== "all"
                  ? "No hay licencias con el estado seleccionado."
                  : "Comienza creando una nueva licencia."}
              </p>
              {isAdmin && (
                <div class="mt-6">
                  <a
                    href="/licenses/new"
                    class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
                  >
                    <span class="mr-2">➕</span>
                    Nueva Licencia
                  </a>
                </div>
              )}
            </div>
          )
        }
      </div>
    </div>
  </main>
</Layout>
