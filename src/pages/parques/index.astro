---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import { supabase } from "../../lib/supabase";
import type { Parque } from "../../types/database.types";

let actionError = "";

// Get search filter from URL
const url = new URL(Astro.request.url);
const searchName = url.searchParams.get("nombre") || "";

// Handle delete action
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const action = formData.get("action");
    const parqueId = formData.get("parqueId");

    if (action === "delete" && parqueId) {
        const { error: deleteError } = await supabase
            .from("parques")
            .delete()
            .eq("id", parqueId);

        if (deleteError) {
            console.error("Error deleting parque:", deleteError);
            actionError = `Error al eliminar el parque: ${deleteError.message}`;
        } else {
            return Astro.redirect("/parques");
        }
    }
}

// Fetch all parques
let query = supabase
    .from("parques")
    .select("*")
    .order("id", { ascending: false });

if (searchName) {
    query = query.ilike("nombre", `%${searchName}%`);
}

let { data: parques, error } = await query;
---

<Layout title="Parques">
    <Navbar />

    <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="animate-fade-in">
            <!-- Header -->
            <div class="sm:flex sm:items-center sm:justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 tracking-tight">
                        Parques
                    </h1>
                    <p class="mt-2 text-lg text-gray-600">
                        Gestiona los parques y zonas infantiles.
                    </p>
                </div>
                <div class="mt-4 sm:mt-0">
                    <a
                        href="/parques/new"
                        class="inline-flex items-center px-5 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all hover:-translate-y-0.5"
                    >
                        <span class="mr-2 text-lg">âž•</span>
                        Nuevo Parque
                    </a>
                </div>
            </div>

            <!-- Search Filter -->
            <div class="mb-6">
                <form method="GET" class="max-w-xl">
                    <div class="flex gap-2">
                        <div class="flex-1">
                            <label
                                for="nombre"
                                class="block text-sm font-medium text-gray-700 mb-1"
                            >
                                Buscar por nombre
                            </label>
                            <input
                                type="text"
                                name="nombre"
                                id="nombre"
                                value={searchName}
                                placeholder="Nombre del parque"
                                class="block w-full rounded-lg border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                            />
                        </div>
                        <div class="flex items-end gap-2">
                            <button
                                type="submit"
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-primary-600 hover:bg-primary-700"
                            >
                                Buscar
                            </button>
                            {
                                searchName && (
                                    <a
                                        href="/parques"
                                        class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg shadow-sm text-gray-700 bg-white hover:bg-gray-50"
                                    >
                                        Limpiar
                                    </a>
                                )
                            }
                        </div>
                    </div>
                </form>
            </div>

            <!-- Parques Grid -->
            <div class="mt-8">
                {
                    actionError && (
                        <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
                            <div class="flex">
                                <svg
                                    class="h-5 w-5 text-red-400"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                        clip-rule="evenodd"
                                    />
                                </svg>
                                <p class="ml-3 text-sm text-red-700 font-medium">
                                    {actionError}
                                </p>
                            </div>
                        </div>
                    )
                }

                {
                    error ? (
                        <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
                            <p class="text-sm text-red-700">
                                Error al cargar parques: {error.message}
                            </p>
                        </div>
                    ) : parques && parques.length > 0 ? (
                        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                            {(parques as Parque[]).map((parque, index) => (
                                <div
                                    class="bg-white rounded-xl shadow-sm ring-1 ring-gray-900/5 hover:shadow-md hover:ring-green-500/30 transition-all duration-300 group animate-slide-up overflow-hidden"
                                    style={`animation-delay: ${index * 50}ms;`}
                                >
                                    {/* Image */}
                                    {parque.imagen_url ? (
                                        <div class="h-40 overflow-hidden">
                                            <img
                                                src={parque.imagen_url}
                                                alt={parque.nombre || "Parque"}
                                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                            />
                                        </div>
                                    ) : (
                                        <div class="h-40 bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center">
                                            <span class="text-6xl">ðŸŒ³</span>
                                        </div>
                                    )}

                                    <div class="p-5">
                                        <div class="flex items-start justify-between">
                                            <div class="flex-1">
                                                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-green-600 transition-colors">
                                                    {parque.nombre ||
                                                        "Sin nombre"}
                                                </h3>
                                            </div>
                                        </div>

                                        {/* Location */}
                                        {parque.latitud && parque.longitud && (
                                            <div class="mt-3 flex items-center text-sm text-gray-600">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke-width="1.5"
                                                    stroke="currentColor"
                                                    class="w-4 h-4 mr-2 text-gray-400"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
                                                    />
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                                                    />
                                                </svg>
                                                <a
                                                    href={`https://www.google.com/maps?q=${parque.latitud},${parque.longitud}`}
                                                    target="_blank"
                                                    rel="noopener noreferrer"
                                                    class="hover:text-green-600 hover:underline"
                                                >
                                                    Ver en Maps
                                                </a>
                                            </div>
                                        )}

                                        <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between text-xs text-gray-500">
                                            <span>ID: {parque.id}</span>

                                            <div class="flex space-x-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                                <a
                                                    href={`/parques/edit/${parque.id}`}
                                                    class="text-blue-600 hover:text-blue-800 font-medium"
                                                >
                                                    Editar
                                                </a>
                                                <span class="text-gray-300">
                                                    |
                                                </span>
                                                <form
                                                    method="POST"
                                                    class="inline"
                                                    onsubmit="return confirm('Â¿EstÃ¡s seguro de que deseas eliminar este parque?')"
                                                >
                                                    <input
                                                        type="hidden"
                                                        name="action"
                                                        value="delete"
                                                    />
                                                    <input
                                                        type="hidden"
                                                        name="parqueId"
                                                        value={parque.id}
                                                    />
                                                    <button
                                                        type="submit"
                                                        class="text-red-600 hover:text-red-800 font-medium"
                                                    >
                                                        Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    ) : (
                        <div class="text-center py-20 bg-white rounded-2xl shadow-sm ring-1 ring-gray-900/5">
                            <div class="text-6xl mb-4">ðŸŒ³</div>
                            <h3 class="mt-4 text-lg font-medium text-gray-900">
                                No hay parques registrados
                            </h3>
                            <p class="mt-1 text-sm text-gray-500">
                                Comienza agregando tu primer parque al sistema.
                            </p>
                            <div class="mt-6">
                                <a
                                    href="/parques/new"
                                    class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700"
                                >
                                    <span class="mr-2">âž•</span>
                                    Nuevo Parque
                                </a>
                            </div>
                        </div>
                    )
                }
            </div>
        </div>
    </main>
</Layout>
